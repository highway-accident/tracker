{% extends '::base.html.twig' %}

{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

{% block content %}
<div class="block">
    <div class="block__head">
        Новое сообщение пользователю {{ recepient.username }}
    </div>

    <div class="block__content">
        {% if errors|length > 0 %}
            <div class="block__content__errors">{{ form_errors(form) }}</div>
        {% endif %}

        <form action="{{ path('message_create', {'recepient_id': recepient.id}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal message-new">
            {{ form_rest(form) }}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Отправить</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}