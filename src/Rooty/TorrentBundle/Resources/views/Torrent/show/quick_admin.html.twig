<form action="{{ path('torrent_admin_update', {'id': entity.torrent.id}) }}" method="post" {{ form_enctype(admin_form) }} class="form-horizontal torrent_admin_form">
{% form_theme admin_form 'MopaBootstrapBundle:Form:fields.html.twig' %}
    {{ form_row(admin_form.discount) }}

    <div class="control-group">
        <label class="control-label" for="input01">Статус проверки:</label>

        <div class="controls">
            {{ form_widget(admin_form.check_status) }}
            <span class="help-inline">{% if entity.torrent.checkStatus != 'unchecked' %}({{ entity.torrent.checkedBy | userlink | raw }}){% endif %}</span>
            {#<p class="help-block">Проверка гарантирует качество оформления раздачи</p>#}
        </div>
    </div>

    {{ form_rest(admin_form) }}

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <button type="reset" class="btn">Сброс</button>
    </div>
</form>