{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

<div class="block">
    <div class="block__head">
        Профиль
    </div>

    <div class="block__content">
        {% if errors|length > 0 %}
        <div class="block__content__errors">{{ form_errors(form) }}</div>
        {% endif %}
        <form action="{{ path('profile_update') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
            {{ form_rest(form) }}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <button type="reset" class="btn">Сброс</button>
            </div>
        </form>
    </div>
</div>