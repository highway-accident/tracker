{% form_theme form 'RootyDefaultBundle:Form:fields_bootstrap.html.twig' %}

<div class="block">
    <div class="block__head">
        Регистрация
    </div>

    <div class="block__content">
        {% if errors|length > 0 %}
        <div class="block__content__errors">{{ form_errors(form) }}</div>
        {% endif %}
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_registration_register">
            {{ form_row(form.username, { 'label': 'Логин:' }) }}
            {{ form_row(form.email, { 'label': 'E-mail:' }) }}
            {{ form_row(form.plainPassword.first, { 'label': 'Пароль:' }) }}
            {{ form_row(form.plainPassword.second, { 'label': 'Повторите пароль:' }) }}
            {{ form_rest(form) }}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>