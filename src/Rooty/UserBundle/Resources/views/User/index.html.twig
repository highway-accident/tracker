{% extends '::base.html.twig' %}

{% block content %}
<div class="block">
    <div class="block__head">
        Список пользователей
    </div>

    <div class="block__content">
        <table class="table table-stripped table-bordered">
            <tr>
                <th>Ник</th>
                <th>Пол</th>
                <th>Дата рождения</th>
                <th>Зарегистрирован</th>
            </tr>

            {% for user in entity %}
                <tr>
                    <td>{{ user | userlink | raw}}</td>
                    <td>{{ user.gender |  default('Не указан') }}</td>
                    <td>{% if user.birthday == NULL %}{{ 'Не указан' }}{% else %}{{ user.birthday|date('j F') ~ ' (' ~ user.birthday|timeElapsed('now')|date('%y') ~ ' лет)' }}{% endif %}</td>
                    <td>{{ user.dateAdded | date('j F Y в H:i') }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock content %}
